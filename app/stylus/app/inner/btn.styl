.btn
	// float: left
	display inline-block
	padding-left: 12px
	padding-right: 12px
	// margin 0 5px
	height: 26px
	line-height @height
	// background: linear-gradient(#f5f5f5, #ffffff)
	$mx_gradient_vertical(#fffffe, #f5f5f5)
	border: 1px solid #c8c8c8
	text-align: center
	font-size: 12px
	color #373737
	vertical-align: top
	&:hover
		color @color
		text-decoration: none
	&:focus
		$mx_gradient_vertical(#f5f5f5, #fffffe)
	
	/&-search
		padding-left 16px
		padding-right: 16px
		margin: 0 5px
	/&-search-more
		position: relative
		padding-right 22px
		i
			position: absolute
			top 7px
			right 8px
			width: 12px
			height: 12px
			background: url(../images/inner/search-more-arrow.png) no-repeat 0 0
		/&__is-open
			i
				background-position: 0 -12px
	/&-result
		height: 31px
		margin-left: -1px
		// border-width: 1px
		border-color: #ddd
		line-height @height
		color #0b87e9
		background: #fbfbfb
		filter none
		&:hover
			color #fff
			// color @color
			background: #0b87e9
			border-color: #0b87e9
		/&-ico
			margin-right: 3px
			// color #0b87e9
			font-size: 1.3em
			font-weight: 100
			*vertical-align: middle
	
	/&-tree-form
		height: 30px
		padding 0 20px
		border: 0
		line-height @height
		background: #0b87e9
		filter none
		color #fff
		&:hover
			color @color	

		
		
		
