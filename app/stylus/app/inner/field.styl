// 表单字段
/.field-controller
	float: left
	width: 33%
	// height: 40px
	line-height: 40px
	overflow: hidden
	font-size: 1.2em
	/.search__is-simple &
		width: 50%	
/.field-block
	float: none
	width: 100%!important
			


/.field-label
	float left
	width: 25%
	color #373737
	span
		display: block
		padding-right: 12px
		text-align: right

/.field-group
	float: left
	width: 75%
	*width: 74.5%
	height: 100%
	/.field-item
		float: left
		margin-top: 6px
		

/.field-hint
	clear: both
	padding-left: 25%
	line-height 16px
	color #999


.field-group-timerange
	/.timerange-to
		// margin-left: 8px
		// margin-right: 8px
		// margin-top: 0
		margin 0 8px