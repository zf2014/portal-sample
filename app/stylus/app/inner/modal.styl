$zIndexModalCover = 1000

.modal-cover
  width: 100%
  height: 100%
  background: #999
  position: fixed
  left 0
  top 0
  z-index: $zIndexModalCover
  opacity: .4
  filter: s('alpha(opacity=40)')
  _position:absolute


.modal
  overflow hidden
  display: none
  position: fixed
  left 50%
  top 50%
  // border: 1px solid #a3a3a3;
  z-index: $zIndexModalCover + 1
  text-align: left
  background-color: #fff
  _position:absolute

.modal_open
  display: block

.modal_alert
.modal_confirm
  // position: relative
  width: 400px
  height: 150px
  margin-left: -(@width/2)
  margin-top: -(@height/2)
  .modal-body
    padding 25px 15px 20px 90px
    // padding-top: 25px
    // padding-left 10px
    // padding-right: 10px
    font-size: 1.4em
    background: url(../images/common/modal-alert-prompt.png) 50px 20px no-repeat

  .modal-foot
    position: absolute
    left 0
    bottom -1px
    width: 100%
    height: 44px
    padding 0
    border-color: #c7e1f6
    text-align: center
    background-color: #e9f5ff
    .btn
      padding-left 20px
      padding-right: 20px
      margin-right: 5px
      margin-top: 9px
      border: 0
      color #fff
      background: #0b87e9
      filter none
    
.modal_alert_fail
  .modal-body
    background-image: url(../images/common/modal-alert-fail.png)

.modal_alert_ok
  .modal-body
    background-image: url(../images/common/modal-alert-ok.png)  

