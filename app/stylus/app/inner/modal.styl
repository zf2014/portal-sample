.modal-header
  position: relative
  background-color: #0567b4
  h2
    margin: 0
    height: 38px
    line-height: @height
    padding-left 10px
    font-size: 1.4em
    color #fff
    font-weight: 100
  .close
    position: absolute
    right: 2px
    top: 2px
    height: 32px
    width: 32px
    line-height @height
    text-align: center
    font-size: 2.2em
    text-decoration: none
    color #fff
    &:hover
      color #ff5917
    

