// =====================================================
// ---  可配置样式组件 --- 输入框自动补全
// =====================================================
$autocompleteBorderColor              = #e3e3e3
$autocompleteHoverBackgroundColor     = #08C

.autocomplete-wrapper
	vertical-align: top
.autocomplete-inp,
.autocomplete-hint-inp
	margin 0
	height: 26px
	padding 0 4px
	line-height: @height
	border: 1px solid #7f9db9
	vertical-align: top

.autocomplete-hint-inp
	display: none
	color: #999
.autocomplete-menu
	width: 100%
	margin-top: 1px
.autocomplete-suggestions
	padding: 4px 0
	margin: 0 
	list-style: none
	background-color: #fff
	border: 1px solid $autocompleteBorderColor
	border-radius(bottom 2px)
	// $box-shadow(0 0 10px rgba(#000, .2))

.autocomplete-suggestion
	line-height: 22px
	padding: 4px

.autocomplete-is-under-cursor
	background-color: $autocompleteHoverBackgroundColor
	color: #fff