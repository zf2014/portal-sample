// =====================================================
// ---  可配置样式组件 --- 页码样式
// =====================================================
.page
	form
		*margin: 0

.page_right
	text-align: right


.page_simple
	.pageskip,
	.pageinfo
		display: none

.page_flat
	.pagination-mark
		padding-left: 8px
		padding-right: 8px
		height: 22px
		line-height: 22px
	.pageskip-input
		height: 22px
		line-height: 22px
	.pageskip-btn
		height: 22px
		line-height: 22px
		line-height: s('%s\9', 24px)
	.page-text
		height: 24px
		line-height: 24px
		line-height: s('%s\9', 26px)
.page-text
	display: inline-block
	height: 28px
	padding-left: 10px
	padding-right: 10px
	line-height: 28px
	line-height: s('%s\9', 30px)
	vertical-align: top

.pagination
	vertical-align: top
	display: inline-block
	$ie7-inline-block()

.pagination-mark
	float: left
	height: 26px
	line-height: 26px
	padding-left: 10px
	padding-right: 10px
	border: 1px solid #ccc
	background: #fff
	margin:0 1px
	color: #c2c2c2

.pagination-mark_link
	color: #3d3d3d
	cursor: pointer
	text-decoration: none
	&:hover
		color: #ff7300

.pagination-mark_current
	cursor: default
	color: #ff7300
	border-color: #f1cb76
	background-color: #fffddd
	&:hover
		text-decoration: none

.pagination-mark_invalid,
.pagination-mark_invalid:hover
	background-color: #fff
	color: #ccc
	cursor: default
	border-color: #ddd
	text-decoration: none

.pagination-mark_next
	border-right: 1px solid #ccc
	border-radius(right 3px)
	line-height: s('%s\9', 28px)

.pagination-mark_prev
	border-radius(left 3px)
	line-height: s('%s\9', 28px)

.pagination-mark_elipses
	border: 0
	background-color: transparent
.pageskip,
.pageinfo
	@extend .pagination

.pageskip-input
	vertical-align: top
	padding: 0
	width: 36px
	margin: 0 -9px
	height: 26px
	line-height: 26px
	border: 1px solid #ccc
	text-align: center

.pageskip-btn
	display: inline-block
	// padding: 3px 10px
	padding-left: 10px
	padding-right: 10px
	height: 26px
	line-height: 26px
	line-height: s('%s\9', 28px)
	border: 1px solid #ccc
	vertical-align: top
	color: #222
	text-decoration: none
	cursor: pointer
	$mx_gradient_vertical(#fffffe , #e6e6e6)
.pageskip-btn:hover
	text-decoration: none
	color: #222
.pageskip-btn:active
	$mx_gradient_vertical(#e6e6e6 , #fffffe)
