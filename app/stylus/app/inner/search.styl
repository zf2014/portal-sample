
.search
	border: 1px solid #e1e1e1
	background-color: #f7f7f7
	
	/.search-container
		position: relative
		padding-bottom:  40px
		padding-top: 15px
		/.search__is-simple &
			padding-top: 0
			padding-bottom 0
	
	/.search-fieldset
		padding-right: 70px
		overflow: hidden
		/.search__is-simple &
			height: 40px
			padding-right: 270px

	/.search-operation
		position: absolute
		bottom 10px
		right 0
		width: 100%
		text-align: center
		/.search__is-simple &
			right 120px
			top 6px
			width: 160px

	/.search-more
		position: absolute
		right: 4px
		top 6px
