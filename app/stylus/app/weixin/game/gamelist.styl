.game-list
	overflow: hidden
	height 100%
	width: 100%
	.item
		position: relative;
		float: left
		width: 50%
		height: 33%
		/.game-logo
			position: absolute;
			left 50%
			top 50%
			width: 180px
			height 180px
			margin-left: -(@width/2)
			margin-top: -(@height/2)
			&.runman
				background: url(../../images/weixin/game-logo-1.png) 0 0 no-repeat
				background-size: 100% 100%
			&.eat
				background: url(../../images/weixin/game-logo-2.png) 0 0 no-repeat
				background-size: 100% 100%
			&.gesture
				background: url(../../images/weixin/game-logo-3.png) 0 0 no-repeat
				background-size: 100% 100%
			&.mahjong
				background: url(../../images/weixin/game-logo-4.png) 0 0 no-repeat
				background-size: 100% 100%
			&.wipe
				background: url(../../images/weixin/game-logo-5.png) 0 0 no-repeat
				background-size: 100% 100%
			
			.game-name
				position: absolute;
				left 0
				bottom -30px
				width: 100%
				height 30px
				line-height: @height
				text-align: center;
				color #373737
				font-size: 20px
			