.game
	position: relative
	height 100%
	width: 100%
	/.game-bg
		position: relative
		z-index: 0
		width: 100%
		height 100%
		/.game-bg-chunk
			/.game-runman &
				float: left
				width 50%
				height 50%
				background: url($wallImageRoot + "runman.jpg") no-repeat 0 0
				&:nth-child(1)
					background-position: 0 0
				&:nth-child(2)
					background-position: 100% 0
				&:nth-child(3)
					background-position: 0 100%
				&:nth-child(4)
					background-position: 100% 100%
	
	/.game-title
		position: absolute
		top 5%
		left 50%
		z-index: 1
		width: 338px
		height 77px
		margin-left: -(@width/2)
		background: url($wallImageRoot + "runman-title.png") no-repeat 0 0
		animation(game-title, 0.5s)

	/.game-rule
		position: absolute
		left 50%
		top 50%
		z-index: 2
		box-sizing: border-box
		width: 638px
		height 386px
		padding 90px 30px 0
		margin-top: -(@height/2)
		margin-left: -(@width/2)
		background-color: rgba(255,255,255,.5)
		border-radius: 10px
		/&.hidden
			animation(game-rule-hidden, 0.5s forwards)
		/&.opened
			animation(game-rule-opened, 0.5s forwards)
		
		/.game-rule-title
			position: absolute
			left 50%
			top 25px
			width: 222px
			height 42px
			margin-left: -(@width/2)
			background: url($wallImageRoot + "rule-title.png") no-repeat 0 0
		
		/.game-rule-content
			font-size: $xfontSize
			line-height: 1.6
			font-weight: 700
			color rgba(49,49,49,1)
			p
				margin-top: 5px
				margin-bottom: 5px
		
		/.game-rule-startbtn
			position: absolute
			bottom 18px
			left 0
			width: 100%
			height 46px
			text-align: center
			button
				width 172px
				height 100%
				// height 46px
				border: 0
				padding 0
				line-height: @height
				background: #ff3000
				border-radius: 3px
				color #fff
				font-size: 24px
		

	/.game-clock
		position: absolute
		bottom 40px
		right 140px
		box-sizing: border-box
		width: 166px
		height 110px
		padding-top 22px
		padding-left: 23px
		background: url($wallImageRoot + "clock.png") no-repeat 0 0
		/.clock-sec
			float: left
			width: 39px
			height 50px
			margin-right: 1px
			line-height: @height
			text-align: center
			color #ff3000
			font-size: 50px
			&:last-child
				margin-right: 0


@keyframes game-title
	0%
		transform(scale(0))
	
	100%
		transform(scale(1))


@keyframes game-rule-hidden
	0%
		transform(scale(1))
	
	100%
		opacity: 0
		transform(scale(0))


@keyframes game-rule-opened
	0%
		opacity: 0
		transform(translateY(100%))
	
	100%
		opacity: 1
		transform(translateY(0))
