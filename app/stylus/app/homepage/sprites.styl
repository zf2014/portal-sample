/*
Stylus variables are information about icon's compiled state, stored under its original file name

.icon-home {
  width: $icon_home_width;
}

The large array-like variables contain all information about a single icon
$icon_home = x y offset_x offset_y width height total_width total_height image_path;

At the bottom of this section, we provide information about the spritesheet itself
$spritesheet = width height image $spritesheet_sprites;
*/
$ico_sprite_interact_name = 'ico-sprite-interact';
$ico_sprite_interact_x = 0px;
$ico_sprite_interact_y = 0px;
$ico_sprite_interact_offset_x = 0px;
$ico_sprite_interact_offset_y = 0px;
$ico_sprite_interact_width = 77px;
$ico_sprite_interact_height = 64px;
$ico_sprite_interact_total_width = 150px;
$ico_sprite_interact_total_height = 128px;
$ico_sprite_interact_image = '../images/homepage/sprite.png';
$ico_sprite_interact = 0px 0px 0px 0px 77px 64px 150px 128px '../images/homepage/sprite.png' 'ico-sprite-interact';
$ico_sprite_invitation_name = 'ico-sprite-invitation';
$ico_sprite_invitation_x = 77px;
$ico_sprite_invitation_y = 0px;
$ico_sprite_invitation_offset_x = -77px;
$ico_sprite_invitation_offset_y = 0px;
$ico_sprite_invitation_width = 73px;
$ico_sprite_invitation_height = 64px;
$ico_sprite_invitation_total_width = 150px;
$ico_sprite_invitation_total_height = 128px;
$ico_sprite_invitation_image = '../images/homepage/sprite.png';
$ico_sprite_invitation = 77px 0px -77px 0px 73px 64px 150px 128px '../images/homepage/sprite.png' 'ico-sprite-invitation';
$ico_sprite_weixwall_name = 'ico-sprite-weixwall';
$ico_sprite_weixwall_x = 0px;
$ico_sprite_weixwall_y = 64px;
$ico_sprite_weixwall_offset_x = 0px;
$ico_sprite_weixwall_offset_y = -64px;
$ico_sprite_weixwall_width = 69px;
$ico_sprite_weixwall_height = 64px;
$ico_sprite_weixwall_total_width = 150px;
$ico_sprite_weixwall_total_height = 128px;
$ico_sprite_weixwall_image = '../images/homepage/sprite.png';
$ico_sprite_weixwall = 0px 64px 0px -64px 69px 64px 150px 128px '../images/homepage/sprite.png' 'ico-sprite-weixwall';
$spritesheet_width = 150px;
$spritesheet_height = 128px;
$spritesheet_image = '../images/homepage/sprite.png';
$spritesheet_sprites = $ico_sprite_interact $ico_sprite_invitation $ico_sprite_weixwall;
$spritesheet = 150px 128px '../images/homepage/sprite.png' $spritesheet_sprites;

/*
The provided mixins are intended to be used with the array-like variables

.icon-home {
  spriteWidth($icon_home)
}

.icon-email {
  sprite($icon_email)
}
*/
spriteWidth($sprite) {
  width: $sprite[4];
}

spriteHeight($sprite) {
  height: $sprite[5];
}

spritePosition($sprite) {
  background-position: $sprite[2] $sprite[3];
}

spriteImage($sprite) {
  background-image: url($sprite[8]);
}

sprite($sprite) {
  spriteImage($sprite)
  spritePosition($sprite)
  spriteWidth($sprite)
  spriteHeight($sprite)
}

/*
The `sprites` mixin generates identical output to the CSS template
  but can be overridden inside of Stylus

This must be run when you have at least 2 sprites.
  If run with a single sprite, then there will be reference errors.

sprites($spritesheet_sprites);
*/
sprites($sprites) {
  for $sprite in $sprites {
    $sprite_name = $sprite[9];
    .{$sprite_name} {
      sprite($sprite);
    }
  }
}
