.vld-form-controller
	position: relative
	// padding-top 10px
	// padding-bottom 10px
	border: 1px solid #e1e1e1
	margin-top: -1px
	$mx_clearfix()
.controller-label
	float: left
	width: 210px
	background-color: #f2f9ff
	// padding-right: 15px
	span
		display: block
		padding 8px 10px 8px 0
		border-right: 1px solid #e1e1e1
		text-align: right
		font-size 1.4em
		line-height: 28px
		color #406c8f
	/.required
		color #f00

.controller-inp
	float: left
	padding-left 10px
	padding-top: 8px
	// padding-left: 15px
	font-size: 1.4em
	/.inp-vld
		width: 240px
		// height: 34px
		// padding 0 4px
		// border: 1px solid #e8e8e8
		// margin 0
		// border-radius: 3px
		// line-height: @height
	// /.inp-email-vcode
	// 	width: 100px

.controller-txt
	float: left
	padding-left: 15px
	font-size: 1.4em
	span
		display: block
		height: 44px
		line-height @height
	.txt-email
		color #0567b4

.controller-tip
	position: absolute
	top 8px
	left 478px
	font-size: 1.2em
	/.tip-txt
		display: block
		height: 22px
		padding 0 7px
		line-height @height
	.hint
		padding-top: 2px
		padding-bottom: 2px
		border: 1px solid #dedede
		background: #f7f7f7
		.tip-txt
			color #585858
	.error
		position: relative
		padding-top: 2px
		padding-bottom: 2px
		border: 1px solid #ffb398
		background: #ffebe0 url(../images/vld/cuo.png) no-repeat 8px 5px
		*zoom 1
		/.ico-cuo
			position: absolute
			left 7px
			top 7px
			// margin-top: -($ico_sprite_cuo[5]/2)
			// sprite($ico_sprite_cuo)
			vertical-align: middle
		.tip-txt
			padding-left 30px
			color #e60012
	.success
		padding-left 7px
		padding-top: 3px
		/.ico-dui
			display: inline-block
			width: 17px
			height: 17px
			background: url(../images/vld/dui.png) no-repeat 0 0
			// sprite($ico_sprite_dui)
			vertical-align: middle