.interaction-settings
	.settings-kernel-content
		padding: 20px 40px


.interaction-writeinfos
	padding-right 260px
	min-height: 420px
	background: url(../images/member/show0.jpg) 100% 0 no-repeat
	/.interaction-writeinfos-block
		overflow: hidden
		margin-bottom: 12px
		.writeinfos-label
			float: left
			height: 28px
			width: 80px
			padding-right: 8px
			line-height: @height
			text-align: right
		.writeinfos-input
			float: left
			width: 230px
		/.writeinfos-upload-input
			position: relative;
			float: left
			width: 230px
			height: 28px
			.upload-file
				position: absolute;
				left 0
				top 0
				z-index: 2
				width: 100%
				height @height
				opacity: 0
				cursor pointer
			.upload-file-name
				position: absolute;
				left 0
				top 0
				z-index: 1
				width: 100%
				height @height
		/.writeinfos-upload-btn
			float: left
			margin-left 5px
			
		

.interaction-upload-images
	padding-left: 80px
	padding-top: 10px
	padding-bottom: 30px
	margin-top: 20px
	margin-bottom: -15px
	overflow: hidden
	/.upload-images-item
		float: left
		margin-right: 15px
		margin-bottom 15px
		/.upload-images-pic
			position: relative;
			width: 65px
			height 65px
			cursor: pointer;
			&:hover
				.target
					display: block
				.close
					display block
			.target
				display: none
				position: absolute;
				bottom: 0;
				left: 0;
				width: 100%
				height 20px
				line-height: @height
				text-align: center;
				background-color: #ffa200
				color #fff
				label
					cursor: pointer
				.ck
					vertical-align: middle
		
			.close
				display none
				position: absolute;
				top -6px
				right -6px
				height 16px
				width: 16px
				border-radius: 50%
				background-color: #ff3000
				color #fff
				line-height: @height
				text-align: center;
				font-size: 18px
				text-decoration: none	

.interaction-botton
	padding-left: 80px
	margin-left -4px
	.btn
		margin: 0 4px
		