.ok-result
	width: 460px
	margin 0 auto
	text-align: center

.ok-result-maintxt
	position: relative
	height: 32px
	font-size: 1.6em
	line-height: @height
	.ok-txt
		display: inline-block
		position: relative
		padding-left: 40px
		i
			position: absolute
			left 0
			top 0
			height: 32px
			width: 32px
			background: url(../images/ok/ok.png) 0 0 no-repeat


.ok-result-tip
	margin-top: 25px
	margin-bottom: 25px
	font-size: 1.4em

.ok-result-oper
	font-size: 1.4em
	a
		color #0088f3
		margin-left: 5px
		margin-right: 8px
		&:hover
			color $glinkerHoverColor
		