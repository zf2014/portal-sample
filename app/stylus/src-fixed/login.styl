.login-container
	position: relative
	height 500px
	background-repeat: no-repeat
	background-position: 0 50%
	
	/.login-frame
		position: absolute
		right 0
		top 75px
		/.login-frame-border
			position: relative
			border-width: 0 1px 1px
			border-style: solid
			border-color: #dedede
			/.login-frame-topline
				position: absolute
				left 0
				top 0
				width: 100%
				height 2px
				background-color: $gsiteColor
				
			/.login-frame-content
				width: 332px
				height 315px
				/.login-cont-title
					padding-top: 30px
					font-size: $gfontSize*(4/3)
					line-height: 2.4
					font-weight: 700
					text-align: center
				
				/.login-cont-scan
					margin-top: 30px
					text-align: center
				
				/.login-cont-hint
					margin-top: 20px
					text-align: center;
					color $gsiteColor
					p
						margin: 0
						line-height: 2
